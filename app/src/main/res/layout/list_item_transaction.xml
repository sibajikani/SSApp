<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:tag="transList "
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/imageProcessed"
        android:layout_alignBottom="@+id/imageProcessed"
        android:layout_alignParentTop="true"
        android:weightSum="1">

        <TextView
            android:id="@+id/details_trans_text"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_alignBottom="@+id/imageProcessed"
            android:layout_alignStart="@+id/details_trans_text"
            android:text="TextView"
            android:layout_weight="0.23" />

        <TextView
            android:id="@+id/pay_trans_text"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="TextView" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageProcessed"
        android:layout_width="74dp"
        android:layout_height="49dp"
        app:srcCompat="@android:drawable/ic_menu_info_details" />


</RelativeLayout>